---
import LandingHeader from "../components/LandingHeader.astro";
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import ModelY from "../components/ModelY.astro";
import ChargeSection from "../components/ChargeSection.astro";
import Model3 from "../components/Model3.astro";
import ModelS from "../components/ModelS.astro";
import ModelX from "../components/ModelX.astro";
import SolarPanles from "../components/SolarPanles.astro";
import SolarRoof from "../components/SolarRoof.astro";
---

<Layout title="Welcome to Astro.">
	<LandingHeader />
	<!-- Con snap  -->
	<main
		class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth"
	>
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<Model3 />
		</div>
		<div class="snap-center">
			<ModelY />
		</div>
		<div class="snap-center">
			<ModelS />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<SolarPanles />
		</div>
		<div class="snap-center">
			<SolarRoof />
		</div>

		<div class="snap-center">
			<ChargeSection />
		</div>
	</main>
</Layout>
